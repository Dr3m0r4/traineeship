#!/bin/bash

img='images'
lbl='labels'

lista=`ls $img`
listb=`ls $lbl`

for name in $lista
do
	file=`basename $name .mgz`
	mri_convert $img/$file.mgz $img/$file.nii.gz
done

for name in $listb
do
	file=`basename $name .mgz`
	mri_convert $lbl/$file.mgz $lbl/$file.nii.gz
done

rm $img/fs* $lbl/fs*
rm $img/*.mgz $lbl/*.mgz
